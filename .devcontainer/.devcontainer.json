{
    "name": "Rust Development Environment",
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer", // Rust Analyzer extension
                "ms-vscode-remote.remote-containers", // Optional: Dev Containers support
